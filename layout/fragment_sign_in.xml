<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.abhi.tutorialfinal.SignInFragment"
    android:orientation="vertical">

    <!-- TODO: Update blank fragment layout -->

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Log Into Your Account"
        android:textAlignment="center"
        android:textSize="34sp"
        android:textColor="#131111" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Sign in to your account here to access all the course content related to the Android Developers Training"
        android:textColor="#131111"
        android:textSize="16dp"
        android:textAlignment="center"
        android:layout_marginTop="20dp"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#f00"
        android:textSize="16dp"
        android:textAlignment="center"
        android:layout_marginTop="20dp"
        android:id="@+id/tv1"
        />

    <EditText
        android:layout_width="340dp"
        android:layout_height="wrap_content"
        android:hint="Username"
        android:textColorHint="#131111"
        android:layout_marginTop="20dp"
        android:layout_marginStart="10dp"
        android:id="@+id/et1"
        />


    <EditText
        android:layout_width="340dp"
        android:layout_height="wrap_content"
        android:hint="Password"
        android:layout_marginTop="20dp"
        android:layout_marginStart="10dp"
        android:inputType="textPassword"
        android:id="@+id/et2"
        android:textColorHint="#131111"/>

        <Button
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:layout_marginStart="80dp"
            android:onClick="login1"
            android:text="Login"
            android:textAllCaps="false"
            android:textColor="#fff"
            android:textSize="14sp"
            android:background="#c700c8ff"
            android:layout_marginTop="40dp"
            android:id="@+id/btn"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Skip for now, Login as a guest"
            android:textSize="16sp"
            android:textColor="#00f"
            android:textAlignment="center"
            android:layout_marginTop="20dp"
            android:id="@+id/tv"
            />

</LinearLayout>
